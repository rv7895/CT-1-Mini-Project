#include <stdio.h>
int main()
{
    int tickettype,noofseats;
    int totalcostofstandardticket;
    int totalcostofsemipremiumticket;
    int totalcostofpremiumticket;
    
    printf("Enter total number of seats needed :  \n");
    scanf("%d",&noofseats);
    printf("There are 3 types of tickets \n \n");
    
    printf("Standard Ticket - Press 1  \n");
    printf("Semi-Premium Ticket - Press 2  \n");
    printf("Premium Ticket - Press 3  \n");

    printf("Enter ticket type of your choice \n");
    scanf("%d",&tickettype);
     if (tickettype==1){
         totalcostofstandardticket=noofseats*250;
            printf("Total cost of ticket is : %d \n",totalcostofstandardticket);
            }
        else if(tickettype==2){
            totalcostofsemipremiumticket=noofseats*500;
            printf("Total cost of ticket is : %d \n",totalcostofsemipremiumticket);
            }
        else if(tickettype==3){
            totalcostofpremiumticket=noofseats*750;
            printf("Total Cost of Ticket is : %d \n",totalcostofpremiumticket);
            }
            else 
            printf("Enter a correct choice \n \n");
    return 0;
    }

      
